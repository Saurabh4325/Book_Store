<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/homePage.css">
</head>
<body>
    <div class="container1">
        <h1>Book List</h1>
        <a href="/books/create">create</a>
    </div>

    <div class="container2">
        <table>
            <tr>
                <th>No</th>
                <th>Title</th>
                <th>Author</th>
                <th>Publish Year</th>
                <th>Operations</th>
            </tr>
            <% userfrontend.forEach((userdata, index) => { %>
            <tr>
                <td><%= index + 1 %></td>
                <td><%= userdata.title %></td>
                <td><%= userdata.author %></td>
                <td><%= userdata.publish %></td>
                <td>
                    <a href="/books/edit/<%=userdata._id %>">edit</a>
                    <a href="/books/delete/<%= userdata._id %>">delete</a>
                </td>
            </tr>
            <% }) %>
        </table>
    </div>
    <!-- <script src="/javascripts/homePage.js"></script> -->
</body>
</html>
